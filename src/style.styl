*
	box-sizing: border-box
	margin: 0

html, body, main, section
	height: 100%

html
	scroll-behavior: smooth

body
	background-color: var(--black)
	font-family: 'Poppins', sans-serif
	font-size: 10px

main
	background-image: var(--logo)
	background-repeat: no-repeat
	background-position: center
	display: flex
	align-items: center
	flex-flow: column
	padding: 3em 0
	background-size: clamp(40em, 90vw, 130em)
	min-height: 35em

nav
	display: flex
	justify-content: space-around
	max-width: 50em
	width: 100%

	& > a
		color: var(--white)
		text-decoration: none
		font-size: 1.8em
		font-weight: 700

h1
	flex: 1
	color: var(--blue-200)
	font-size: clamp(3em, 8vw, 10em)
	font-weight: 100
	display: flex
	justify-content: center
	align-items: center
	flex-flow: column
	line-height: 1.8em

	& > span
		font-size: 2.1em
		position relative

		&::after
			content: attr(data-text)
			position: absolute
			color: var(--white)
			left: 0
			overflow: hidden
			animation: loading .5s linear

			@keyframes loading {
				from {width: 0}
				to {width: 100%}
			}

h1 > span, h2
	color: transparent
	font-weight: 900
	-webkit-text-stroke: 2px var(--white)

h2
	font-size: 2.5rem

section
	margin: 0 auto
	display: flex

fieldset
	border: solid var(--blue-200)
	border-width: .1em .2em
	height: 100%
	width 100%
	max-width: 130em
	margin: 0 auto

legend
	color: var(--white)
	font-weight: 900
	font-size: 2.5rem

.about
	padding: 0 2em

	& > fieldset
		padding-left: 0
		border-top-width: .2em
		border-left: 0

		& > legend
			padding: 0 .5em 0 0

.works
	writing-mode: vertical-lr
	text-orientation: upright
	line-height: 0
	letter-spacing: -2.4em
	width 100%
	padding: 0 2em
	
	& > fieldset
		padding 10em
		border-right: 0

		& > legend
			padding: 0.5em 0 1em 0

.contact
	writing-mode: vertical-rl
	text-orientation: upright
	line-height: 0
	letter-spacing: -2.4em
	width 100%
	overflow: hidden
	padding: 0 2em

	& > fieldset
		border-bottom-width: 2px
		padding 10em
		border-left: 0

		& > legend
			padding: 0.5em 0 1em 0